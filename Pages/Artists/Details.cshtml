@page
@model Music_Events.Pages.Artists.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.StageName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Artist.StageName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Artist.Bookings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Event Name</th>
                    <th>Event Date</th>
                    <th>Performer's Fee</th>
                </tr>
                @foreach (var item in Model.Artist.Bookings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Event.EventName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Event.EventDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment)
                        </td>
                    </tr>
                }

            </table>
        </dd>
        
        
      
        <dt class="col-sm-2">
            @Html.DisplayName("Popular Tracks")
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Track</th>
                    <th>Length</th>
                   
                </tr>
                @foreach (var item in Model.Artist.Tracks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TrackName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Length)
                        </td>
                        
                    </tr>
                }

            </table>
        </dd>


    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Artist.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
