@page
@model Music_Events.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Event</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.EventDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Event.Type)
        </dd>
       
        
     
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Event.Bookings)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Performer</th>
                    <th>Performer's Fee</th>
                    <th>Popular Tracks</th>

                </tr>
                @foreach (var item in Model.Event.Bookings)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Artist.StageName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Payment)
                        </td>
                        <td>
                           
                             <dd class="col-sm-14">
                                 <table class="table">
                                    
                                    @foreach (var i in item.Artist.Tracks)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => i.TrackName)
                                            </td>
                                            
                                        </tr>
                                    }
                                
                                </table>
                            </dd>


                        </td>

                    </tr>
                }

            </table>
        </dd>
        


    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Event.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
